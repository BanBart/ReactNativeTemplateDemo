{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@atoms/*": ["app/components/atoms/*"],
      "@molecules/*": ["app/components/molecules/*"],
      "@organisms/*": ["app/components/organisms/*"],
      "@screens/*": ["app/screens/*"],
      "@assets/*": ["app/assets/*"],
      "@hooks/*": ["app/hooks/*"],
      "@locales/*": ["app/locales/*"],
      "@models/*": ["app/models/*"],
      "@navigators/*": ["app/navigators/*"],
      "@providers/*": ["app/providers/*"],
      "@services/*": ["app/services/*"],
      "@stores/*": ["app/stores/*"],
      "@themes/*": ["app/themes/*"],
      "@utils/*": ["app/utils/*"],
      "@components/*": ["app/components/*"],
      "@app/*": ["app/*"]
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "lint": {
          "validProperties": [
            "shadow-color",
            "shadow-opacity",
            "shadow-offset",
            "shadow-radius",
            "padding-horizontal",
            "padding-vertical",
            "margin-vertical",
            "margin-horizontal",
            "tint-color",
            "aspect-ratio",
            "elevation"
          ]
        }
      }
    ]
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js", "**/__mocks__/*"]
}
