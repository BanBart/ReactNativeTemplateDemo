{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@app/*": ["app/*"],
      "@atoms/*": ["app/components/atoms/*"],
      "@molecules/*": ["app/components/molecules/*"],
      "@organisms/*": ["app/components/organisms/*"],
      "@components/*": ["app/components/*"],
      "@screens/*": ["app/screens/*"],
      "@assets/*": ["app/assets/*"],
      "@hooks/*": ["app/hooks/*"],
      "@locales/*": ["app/locales/*"],
      "@models/*": ["app/models/*"],
      "@navigators/*": ["app/navigators/*"],
      "@providers/*": ["app/providers/*"],
      "@services/*": ["app/services/*"],
      "@stores/*": ["app/stores/*"],
      "@themes/*": ["app/themes/*"],
      "@utils/*": ["app/utils/*"]
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "noImplicitAny": true
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js", "**/__mocks__/*"]
}
